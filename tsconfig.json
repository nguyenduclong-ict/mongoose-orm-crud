{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": ["node", "reflect-metadata"],
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES5",
    "baseUrl": "./src",
    "paths": {},
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
